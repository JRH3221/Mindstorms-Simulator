<UserControl x:Class="Mindstorm_Simulator.Theme.ProjectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mindstorm_Simulator.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="70">
        <Button Background="Transparent" Click="Button_Click" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock x:Name="ProjectName" FontSize="25" Margin="10,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ProjectDirectory" FontSize="15" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="Gray"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
